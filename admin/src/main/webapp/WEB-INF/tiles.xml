       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<definition name="normal/login/index" template="/WEB-INF/tiles/normal/base_unauth.jsp">
		<put-attribute name="name" value="login/index" />
		<put-attribute name="content"
			value="/WEB-INF/tiles/normal/login/index.jsp" />
	</definition>

	<definition name="normal/secure/**" template="/WEB-INF/tiles/normal/base_auth.jsp">
		<put-attribute name="name" value="secure/{1}" />
		<put-attribute name="content"
			value="/WEB-INF/tiles/normal/secure/{1}.jsp" />
	</definition>

	<definition name="mobile/login/index" template="/WEB-INF/tiles/mobile/base_unauth.jsp">
		<put-attribute name="name" value="login/index" />
		<put-attribute name="content"
			value="/WEB-INF/tiles/mobile/login/index.jsp" />
	</definition>

	<definition name="mobile/secure/**" template="/WEB-INF/tiles/mobile/base_auth.jsp">
		<put-attribute name="name" value="secure/{1}" />
		<put-attribute name="content"
			value="/WEB-INF/tiles/mobile/secure/{1}.jsp" />
	</definition>

</tiles-definitions>
