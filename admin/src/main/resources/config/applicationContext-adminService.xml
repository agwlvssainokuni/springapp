<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<bean id="paginator" class="cherry.spring.common.lib.pager.TotalCountPaginator">
		<property name="totalCount" value="${admin.app.paginator.totalCount}" />
	</bean>

	<bean id="usersExtractor" class="cherry.spring.common.lib.db.DataExtractorImpl">
		<property name="dataSource" ref="dataSource" />
		<property name="sql">
			<value><![CDATA[
				SELECT
					A.mail_addr,
					A.password,
					A.first_name,
					A.last_name,
					A.registered_at
				FROM
					users A
				WHERE
					A.registered_at BETWEEN :registeredFrom AND :registeredTo
					AND
					A.deleted_flg = 0
				ORDER BY
					A.id
			]]></value>
		</property>
	</bean>

	<bean id="usersLoader" class="cherry.spring.common.lib.db.DataLoaderImpl">
		<property name="dataSource" ref="dataSource" />
		<property name="sql">
			<value><![CDATA[
				INSERT INTO users (
					mail_addr,
					password,
					first_name,
					last_name
				) VALUES (
					:mailAddr,
					:password,
					:firstName,
					:lastName
				)
			]]></value>
		</property>
	</bean>

</beans>
