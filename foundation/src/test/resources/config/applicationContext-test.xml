<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xmlns:mybatis-spring="http://mybatis.org/schema/mybatis-spring"
	xsi:schemaLocation="http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-4.1.xsd
		http://mybatis.org/schema/mybatis-spring http://mybatis.org/schema/mybatis-spring-1.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

	<import resource="applicationContext-foundation.xml" />

	<jdbc:embedded-database id="dataSource" type="H2" />

	<bean id="flyway" class="org.flywaydb.core.Flyway" init-method="migrate">
		<property name="dataSource" ref="dataSource" />
		<property name="locations" value="db/migration" />
		<property name="encoding" value="UTF-8" />
	</bean>

	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<mybatis-spring:scan base-package="cherry.spring.common.db" />

	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="typeHandlers">
			<list>
				<bean class="cherry.spring.common.type.mybatis.JodaLocalDateTypeHandler" />
				<bean class="cherry.spring.common.type.mybatis.JodaLocalTimeTypeHandler" />
				<bean
					class="cherry.spring.common.type.mybatis.JodaLocalDateTimeTypeHandler" />
				<bean class="cherry.spring.common.type.mybatis.JodaDateTimeTypeHandler" />
				<bean class="cherry.spring.common.type.mybatis.SecureStringTypeHandler" />
				<bean class="cherry.spring.common.type.mybatis.SecureIntegerTypeHandler" />
				<bean class="cherry.spring.common.type.mybatis.SecureLongTypeHandler" />
				<bean
					class="cherry.spring.common.type.mybatis.SecureBigIntegerTypeHandler" />
				<bean
					class="cherry.spring.common.type.mybatis.SecureBigDecimalTypeHandler" />
				<bean class="cherry.spring.common.type.mybatis.DeletedFlagTypeHandler" />
				<bean class="cherry.spring.common.type.mybatis.FlagCodeTypeHandler" />
			</list>
		</property>
	</bean>

	<bean class="cherry.spring.common.lib.paginate.PaginatorImpl">
		<property name="paginateStrategy">
			<bean class="cherry.spring.common.lib.paginate.TotalCountStrategy">
				<property name="totalCount" value="7" />
				<property name="lowerSideHint" value="3" />
				<property name="lowerTrim" value="1" />
				<property name="upperTrim" value="1" />
			</bean>
		</property>
	</bean>

</beans>
