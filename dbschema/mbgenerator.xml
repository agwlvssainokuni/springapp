<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
	PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
	"http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
	<context id="common" targetRuntime="MyBatis3Simple">
		<plugin type="org.mybatis.generator.plugins.SerializablePlugin" />
		<plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin" />
		<commentGenerator>
			<property name="suppressDate" value="true" />
		</commentGenerator>
		<jdbcConnection driverClass="org.h2.Driver"
			connectionURL="jdbc:h2:./dbschema/build/mbgenerator" userId="sa" />
		<javaModelGenerator targetPackage="cherry.spring.common.db.gen.dto"
			targetProject="common/src/main/java">
			<property name="rootClass" value="cherry.spring.common.db.BaseDto" />
		</javaModelGenerator>
		<sqlMapGenerator targetPackage="cherry.spring.common.db.gen.mapper"
			targetProject="common/src/main/java" />
		<javaClientGenerator targetPackage="cherry.spring.common.db.gen.mapper"
			type="XMLMAPPER" targetProject="common/src/main/java" />
		<table tableName="user">
			<columnOverride column="registered_at" javaType="org.joda.time.LocalDateTime" />
			<columnOverride column="updated_at" javaType="org.joda.time.LocalDateTime" />
			<columnOverride column="created_at" javaType="org.joda.time.LocalDateTime" />
		</table>
		<table tableName="signup_request">
			<columnOverride column="applied_at" javaType="org.joda.time.LocalDateTime" />
			<columnOverride column="updated_at" javaType="org.joda.time.LocalDateTime" />
			<columnOverride column="created_at" javaType="org.joda.time.LocalDateTime" />
		</table>
		<table tableName="mail_template">
			<columnOverride column="updated_at" javaType="org.joda.time.LocalDateTime" />
			<columnOverride column="created_at" javaType="org.joda.time.LocalDateTime" />
		</table>
		<table tableName="mail_template_address">
			<columnOverride column="updated_at" javaType="org.joda.time.LocalDateTime" />
			<columnOverride column="created_at" javaType="org.joda.time.LocalDateTime" />
		</table>
		<table tableName="mail_template_text">
			<columnOverride column="updated_at" javaType="org.joda.time.LocalDateTime" />
			<columnOverride column="created_at" javaType="org.joda.time.LocalDateTime" />
		</table>
		<table tableName="async_proc">
			<columnOverride column="registered_at" javaType="org.joda.time.LocalDateTime" />
			<columnOverride column="invoked_at" javaType="org.joda.time.LocalDateTime" />
			<columnOverride column="started_at" javaType="org.joda.time.LocalDateTime" />
			<columnOverride column="finished_at" javaType="org.joda.time.LocalDateTime" />
			<columnOverride column="updated_at" javaType="org.joda.time.LocalDateTime" />
			<columnOverride column="created_at" javaType="org.joda.time.LocalDateTime" />
		</table>
	</context>
</generatorConfiguration>
